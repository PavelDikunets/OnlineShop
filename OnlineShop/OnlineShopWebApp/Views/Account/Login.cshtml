@model LoginViewModel

<form method="post">
    <div class="row">
        <div class="col text-center">
            <div>
                <h3>Вход</h3>
            </div>
            <div>
                <p>
                    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <div>
                        <label asp-for="UserName">Логин:</label><br />
                        <input asp-for="UserName" size="30" placeholder="Qwerty12345" /><br />
                        <span style="color:lightcoral" asp-validation-for="UserName" />
                    </div>
                </p>
            </div>
            <div>
                <p>
                    <div>
                        <label asp-for="Password">Пароль:</label><br />
                        <input asp-for="Password" type="password" size="30" placeholder="Пароль" /><br />
                        <span style="color:lightcoral" asp-validation-for="Password" /><br />
                    </div>
                </p>
            </div>
            <div>
                <p>
                    <input type="checkbox" id="RememberMe" value="true" name="RememberMe" /> Запомнить меня?
                </p>
            </div>
            <p>
                <div>
                    <p>
                        <button class="btn btn-dark w-25" type="submit" asp-controller="Account" asp-action="Login">Войти</button>
                    </p>
                </div>
            </p>
        </div>
    </div>
</form>
<div class="row">
    <div class="col text-center">
        <div>
            <p>
                <a class="btn btn-dark w-25" asp-controller="Account" asp-action="Registration">Регистрация</a>
            </p>
        </div>
    </div>
</div>