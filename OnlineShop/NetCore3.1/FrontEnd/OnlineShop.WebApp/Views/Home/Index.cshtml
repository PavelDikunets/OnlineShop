@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form method="post">
                <div class="input-group">
                    <input type="search" placeholder="Название продукта" name="searchRequest" id="form1" class="form-control" />
                    <button type="submit" class="btn btn-outline-dark"
                            asp-area=""
                            asp-controller="Search"
                            asp-action="Index">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md mx-1 my-1 card shadow text-center">
                <div class="card-body">
                    <a style="color:black"
                       asp-area=""
                       asp-controller="Product"
                       asp-action="Index"
                       asp-route-productId="@product.Id">
                        <img class="card-img-top" src="@product.ImagePath" style="max-width: 100%" alt="Notebook" />
                        <h5>@product.Name</h5>
                    </a>
                    <h6>Цена: @product.Cost руб.</h6>
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        <a class="btn add-cart-btn-outline-success"
                           asp-controller="Cart"
                           asp-action="Add"
                           asp-route-productId="@product.Id"
                           role="button"><i class="bi bi-cart-plus-fill"></i> Добавить в корзину</a>
                        <a class="btn add-favorite-btn-outline-dark"
                           asp-area=""
                           asp-controller="Favorite"
                           asp-action="Add"
                           asp-route-productId="@product.Id"
                           role="button"><i class="bi bi-star-fill"></i></a>
                        <a class="btn add-compare-btn-outline-dark"
                           asp-area=""
                           asp-controller="Compare"
                           asp-action="Add"
                           asp-route-productId="@product.Id"
                           role="button"><i class="fas fa-balance-scale"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>