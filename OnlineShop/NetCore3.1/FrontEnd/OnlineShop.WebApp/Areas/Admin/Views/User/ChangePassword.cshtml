@model ChangePasswordViewModel

<form method="post">
    <div class="container">
        <div class="text-center">
            <h3>Смена пароля для логина: @Model.UserName</h3>
        </div>
        <div class="row">
            <div class="col-md-2">
                @await Html.PartialAsync("AdminLeftMenu")
            </div>
            <div class="col-md text-center">
                <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
                <input type="hidden" name="userName" value="@Model.UserName" />
                <div class="my-2">
                    <label asp-for="NewPassword">Новый пароль:</label>
                    <br />
                    <input type="password" asp-for="NewPassword" />
                    <br />
                    <span style="color:lightcoral" asp-validation-for="NewPassword" />
                </div>
                <div class="my-2 text-center">
                    <button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="User" asp-action="ChangePassword">Сменить</button>
                </div>
            </div>
        </div>
    </div>
</form>