@model ProductViewModel

<form method="post">
    <div class="text-center">
        <h3>Редактирование продукта</h3>
    </div>
    <div class="row">
        <div class="col-md-4">
            <img src="/img/notebook.jpg" style="max-width: 100%" alt="Notebook" />
        </div>
        <div class="col-md-8">
            <div>
                <label asp-for="Name">Наименование продукта:</label>
                <input asp-for="Name" class="w-100" value="@Model.Name" />
                <span style="color:lightcoral" asp-validation-for="Name" />
            </div>
            <div class="my-2">
                <label asp-for="Description">Описание продукта:</label>
                <textarea asp-for="Description" class="w-100" rows="10" value="@Model.Description"></textarea>
                <span style="color:lightcoral" asp-validation-for="Description" />
            </div>
            <div class="my-2 text-right">
                <label asp-for="Cost">Цена:</label>
                <input asp-for="Cost" class="w-25" value="@Model.Cost"/>руб.<br />
                <span style="color:lightcoral" asp-validation-for="Cost" />
            </div>
            <div class="my-2 text-right">
                <button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">Сохранить</button>
                <a class="btn btn-dark" asp-area="Admin" asp-controller="Product" asp-action="Index" role="button">К списку продуктов</a>
            </div>
        </div>
    </div>
</form>