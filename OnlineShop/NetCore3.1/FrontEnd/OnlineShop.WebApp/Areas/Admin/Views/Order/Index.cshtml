@model List<OrderViewModel>

<div class="text-center">
    <h3>Заказы</h3>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2">
            @await Html.PartialAsync("AdminLeftMenu")
        </div>
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Фамилия имя</th>
                        <th>Общая сумма</th>
                        <th>Дата</th>
                        <th>Время</th>
                        <th>Статус</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.UserDeliveryInfo.LastName @order.UserDeliveryInfo.FirstName</td>
                            <td>@order.Cost</td>
                            <td>@order.CreateDateTime.ToShortDateString()</td>
                            <td>@order.CreateDateTime.ToShortTimeString()</td>
                            <td>@EnumHelper.GetDisplayName(order.Status)</td>
                            <td><a class="btn btn-outline-success" asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@order.Id">Подробнее</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>